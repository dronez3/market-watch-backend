{
  "openapi": "3.1.0",
  "info": { "title": "Market Watch Backend", "version": "0.1.0" },
  "servers": [{ "url": "https://market-watch-backend.vercel.app" }],
  "paths": {
    "/api/ping": {
      "get": {
        "summary": "Public ping",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/secure_ping": {
      "get": {
        "summary": "Protected ping",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": { "type": "string", "example": "Bearer <ACTIONS_BEARER_TOKEN>" },
            "required": false
          },
          {
            "in": "query",
            "name": "token",
            "schema": { "type": "string" },
            "required": false,
            "description": "Temporary testing token (remove later)"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    }
  }
}
